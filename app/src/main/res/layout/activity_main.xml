<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/fab"
        app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/bag"
        app:layout_constraintBottom_toBottomOf="parent" app:backgroundTint="@color/Green"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/dairyLabel"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Dairy"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintBottom_toTopOf="@+id/diaryBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruitBtn"
        app:layout_constraintVertical_bias="0.298" />

    <TextView
        android:id="@+id/meatLabel"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:autoText="true"
        android:gravity="center"
        android:text="Meat"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintBottom_toTopOf="@+id/meatBtn"
        app:layout_constraintEnd_toStartOf="@+id/dairyLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegBtn"
        app:layout_constraintVertical_bias="0.298" />

    <TextView android:layout_height="45dp" android:layout_width="155dp" app:layout_constraintTop_toBottomOf="@+id/mainLabel" app:fontFamily="sans-serif-smallcaps" android:textStyle="bold" android:textSize="28sp" android:textColor="#000000" android:text="Vegetables" android:gravity="center" android:autoText="true" android:id="@+id/vegLabel" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>

    <android.support.v7.widget.Toolbar android:layout_height="80dp" android:layout_width="400dp" app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/searchBar" android:layout_marginBottom="32dp" android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.571" app:layout_constraintTop_toTopOf="parent" android:theme="?attr/actionBarTheme" android:minHeight="?attr/actionBarSize" android:background="@color/Green"/>

    <SearchView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:background="#1197968A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ImageButton
        android:id="@+id/vegBtn"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegLabel"
        app:srcCompat="@drawable/vegetables" />

    <ImageButton
        android:id="@+id/fruitBtn"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/vegBtn"
        app:layout_constraintTop_toBottomOf="@+id/fruitLabel"
        app:srcCompat="@drawable/fruits" />

    <ImageButton android:layout_height="170dp" android:layout_width="155dp" android:layout_marginBottom="48dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:id="@+id/meatBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/diaryBtn" android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:srcCompat="@drawable/meat" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton android:layout_height="170dp" android:layout_width="155dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp" android:layout_marginRight="32dp" android:layout_marginEnd="32dp" android:id="@+id/diaryBtn" app:srcCompat="@drawable/dairy" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_height="45dp" android:layout_width="155dp" app:layout_constraintTop_toBottomOf="@+id/mainLabel" app:layout_constraintEnd_toEndOf="parent" app:fontFamily="sans-serif-smallcaps" android:textStyle="bold" android:textSize="28sp" android:textColor="#000000" android:text="Fruits" android:gravity="center" android:autoText="true" android:layout_marginRight="32dp" android:layout_marginEnd="32dp" android:id="@+id/fruitLabel" app:layout_constraintHorizontal_bias="1.0" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/vegLabel"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/logo" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/logo"/>

    <TextView
        android:id="@+id/mainLabel"
        android:layout_width="327dp"
        android:layout_height="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Explore fresh produce from farmer's market"
        android:textColor="#4E6E27"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <TextView android:layout_height="27dp" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="@+id/searchBar" android:textSize="18sp" android:text="Browse for groceries" android:layout_marginBottom="12dp" android:id="@+id/searchText" app:layout_constraintStart_toStartOf="@+id/searchBar" app:layout_constraintHorizontal_bias="0.292" app:layout_constraintBottom_toBottomOf="@+id/searchBar"/>

</android.support.constraint.ConstraintLayout>